# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-long-random-string

# Database Configuration
DB_PATH=./databases

# Upload Paths
UPLOAD_PATH=./uploads
EXCEL_UPLOAD_PATH=./uploads/excel
IMAGE_UPLOAD_PATH=./uploads/images

# Sync Schedule (Cron format)
# Default: 12:00 PM and 6:00 PM daily
SYNC_SCHEDULE_1=0 12 * * *
SYNC_SCHEDULE_2=0 18 * * *

# Default Admin Credentials (CHANGE IN PRODUCTION!)
DEFAULT_ADMIN_USERNAME=admin-gis
DEFAULT_ADMIN_PASSWORD=gis2026

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*

# API Configuration
API_VERSION=1.0.0
API_PREFIX=/api

# Mobile App Configuration (for reference)
# Update MobileApp/src/utils/constants.js with your server IP
# MOBILE_API_URL=http://YOUR_IP_ADDRESS:3000/api
